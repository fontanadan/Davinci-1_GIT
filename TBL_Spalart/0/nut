FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0.0000865;

boundaryField
{
    my-velocity-inlet
    {
        type            calculated;
        value           uniform 0;
    }

    my-pressure-outlet
    {
        type            calculated;
        value           uniform 0;
    }

    my-wall
    {
        type            nutUWallFunction;
        value           uniform 0;
    }

    "(wedgeplanesFront|wedgeplanesBack)"
    {
        type            wedge;
    }

    freeSurf
    {
        type            symmetryPlane;
    }
}

